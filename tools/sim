#!/usr/bin/env python3

import os
import sys

# All times on the board are in UTC.
os.environ['TZ'] = 'UTC'

# microcontroller.py is the hook that installs monkey-patches.
os.environ['CCLOCK_SIMULATOR'] = os.getcwd() + '/simulator'
with open('/tmp/cclock/microcontroller.py', 'w') as opt:
    with open('simulator/microcontroller.py') as ipt:
        opt.write(ipt.read())

# Off we go!
os.chdir('/tmp/cclock')
sys.path = ['.'] + sys.path
import main
